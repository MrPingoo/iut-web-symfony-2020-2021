{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>PictureFirst</th>
                <td>{{ product.pictureFirst }}</td>
            </tr>
            <tr>
                <th>PictureSecond</th>
                <td>{{ product.pictureSecond }}</td>
            </tr>
            <tr>
                <th>PictureThird</th>
                <td>{{ product.pictureThird }}</td>
            </tr>
            <tr>
                <th>PriceHT</th>
                <td>{{ product.priceHT }}</td>
            </tr>
            <tr>
                <th>PriceTTC</th>
                <td>{{ product.priceTTC }}</td>
            </tr>
            <tr>
                <th>CratedAt</th>
                <td>{{ product.cratedAt ? product.cratedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ product.deletedAt ? product.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">back to list</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
